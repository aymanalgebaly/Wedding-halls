<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.InviteFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_28sdp"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/_130sdp"
                >


                <Spinner
                    android:id="@+id/invite_spinner"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_20sdp"
                    style="@style/Spinner"
                    android:layout_weight="1"
                    android:scrollbarStyle="insideInset"
                    android:theme="@style/MatchSpinnerTheme">

                </Spinner>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_14sdp"
                    android:layout_weight="1"
                    android:text="إختر دعوتك "
                    android:textColor="#832222"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />


            </LinearLayout>



            <EditText
                android:id="@+id/invent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="#75000000"
                android:gravity="end"
                android:hint="فرحتنا فرحه الصحاب
 الدعوه عامه لكل الحبايب والاصدقاء
وحفل من نار ممنوع الاعتذار
ومش عاوز اسمع كان ورايا مشوار
والدعوه عامه للجميع"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:textAlignment="viewEnd"
                android:textColor="#ffffff"
                android:textColorHighlight="#d24e4e"
                android:textColorHint="#a49797"
                android:textColorLink="#dc0000" />


            <Button
                android:id="@+id/whatsapp"
                android:text="WhatsApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="callwatts"
                android:textAllCaps="false"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_light"
                android:background="@color/colorwhats"
                android:textSize="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_60sdp"
                android:layout_marginLeft="@dimen/_60sdp"
                android:layout_marginBottom="@dimen/_50sdp"
                />




        </LinearLayout>


    </ScrollView>


</FrameLayout>